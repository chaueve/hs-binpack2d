category:            Data
extra-source-files:  CHANGELOG.md

library
  ghc-options:         -Wno-tabs
  exposed-modules:     Data.BinPack2D
  -- other-modules:
  -- other-extensions:
  default-extensions:  RecordWildCards
                       BangPatterns
  build-depends:       base ^>=4.12.0.0
                     , containers ^>=0.6.0.1
  hs-source-dirs:      source
  default-language:    Haskell2010

test-suite basic
